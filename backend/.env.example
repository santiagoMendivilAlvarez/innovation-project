# Environment variables for Django backend
# Copy this file to .env and fill in values for your local development.

# Django
SECRET_KEY=django-insecure-change-this-in-production
DEBUG=True

# Email (optional, for sending verification/reset emails)
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-email-password

# API keys
GOOGLE_BOOKS=your-google-books-api-key
AMAZON_ACCESS_KEY_ID=your-amazon-access-key-id
AMAZON_SECRET_ACCESS_KEY=your-amazon-secret-access-key
AMAZON_ASSOCIATE_TAG=your-amazon-associate-tag
RAPIDAPI_KEY=your-rapidapi-key

# OpenAI
OPENAI_API_KEY=your-openai-api-key
